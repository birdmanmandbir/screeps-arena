{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext"],
    "experimentalDecorators": true,
    "baseUrl": "src/",
    "module": "esnext",
    "moduleResolution": "Node10",
    "typeRoots": ["./node_modules/@types", "./@types", "./node_modules/@types/screeps-arena/dist"],
    "types": ["game", "arena", "node"],
    "strict": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
